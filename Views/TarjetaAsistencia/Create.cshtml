@model IntranetMundoRepresentaciones.Models.tb_tarjetaasistencia

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Editar Hotel</h4>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!--Primera Fila-->
            <div class="col-md-12">
                <div class="col-md-6">
                    <!--Nombre-->
                    <div class="col-md-1">
                        <label style="font-size:11px;">Nombre</label>
                    </div>
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.nombreTarjetaasistencia, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-md-6">
                    <!--Nombre-->
                    <div class="col-md-1">
                        <label style="font-size:11px;">Operador</label>
                    </div>
                    <div class="col-md-11">
                        @Html.DropDownList("idOperador", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <!--Segunda Fila-->
            <div class="col-md-12">
                <br />
                <div class="col-md-6">
                    <!--Cobertura-->
                    <div class="col-md-1">
                        <label style="font-size:11px;">Cobertura</label>
                    </div>
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.cobertura, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-md-6">
                    <!--Costo-->
                    <div class="col-md-1">
                        <label style="font-size:11px;">Costo</label>
                    </div>
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.costo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <!--Botones-->
            <div class="col-md-12" style="text-align:center;">
                <br />
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Regresar Lista Tarjeta Asistencia", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
