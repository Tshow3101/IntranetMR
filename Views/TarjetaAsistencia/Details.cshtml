@model IntranetMundoRepresentaciones.Models.tb_tarjetaasistencia

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutReporte.cshtml";
}

<br />

<div class="col-md-12">
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">Crear Tarifa Aerea</h4>
        </div>
        <div class="panel-body">
            <!--Primera Fila-->
            <div class="col-md-12">
                <div class="col-md-6">
                    <!--Nombre-->
                    <div class="col-md-1">
                        <label style="font-size:11px;">Nombre</label>
                    </div>
                    <div class="col-md-11">
                        &nbsp; @Html.DisplayFor(model => model.nombreTarjetaasistencia)
                    </div>
                </div>
                <div class="col-md-6">
                    <!--Nombre-->
                    <div class="col-md-1">
                        <label style="font-size:11px;">Operador</label>
                    </div>
                    <div class="col-md-11">
                        &nbsp; @Html.DisplayFor(model => model.tb_usuario.nombreusuario)
                    </div>
                </div>
            </div>
            <!--Segunda Fila-->
            <div class="col-md-12">
                <br />
                <div class="col-md-6">
                    <!--Cobertura-->
                    <div class="col-md-1">
                        <label style="font-size:11px;">Cobertura</label>
                    </div>
                    <div class="col-md-11">
                        &nbsp; @Html.DisplayFor(model => model.cobertura)
                    </div>
                </div>
                <div class="col-md-6">
                    <!--Costo-->
                    <div class="col-md-1">
                        <label style="font-size:11px;">Costo</label>
                    </div>
                    <div class="col-md-11">
                        &nbsp; @Html.DisplayFor(model => model.costo)
                    </div>
                </div>
            </div>

            <!--Botones-->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                /*Botones*/
                <div class="col-md-12" style="text-align:center;">
                    <div class="form-group">
                        @Html.ActionLink("Editar Tarjeta Asistencia", "Edit", new { id = Model.idTarjetaasistencia }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Regresar Lista Tarje Asistencia ", "Index", null, new { @class = "btn btn-danger" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>