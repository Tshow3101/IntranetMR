@model IntranetMundoRepresentaciones.Models.tb_hotel

@{
    ViewBag.Title = "Create";
}
<script src="~/Scripts/Scripts-Intranet/ScriptHotel.js"></script>
<br />
<style>
    .col-md-2 {
        width: 21%;
    }
</style>
<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Crear Hotel</h4>
    </div>
    <div class="panel-body">
        <!--Primera Fila-->
        <div class="col-md-12">
            <!--Nombre-->
            <div class="col-md-2" style="width:58%;">
                <div class="col-md-1">
                    <label style="font-size:11px;">Nombre</label>
                </div>
                <div class="col-md-11">
                    @Html.EditorFor(model => model.nombrehotel, new { htmlAttributes = new { @style = "width: 100%; height:30px;" } })
                </div>
            </div>

            <!--Cadena Hotelera-->
            <div class="col-md-2">
                <div class="col-md-4">
                    <label style="font-size:11px;">Cadena Hotelera</label>
                </div>
                <div class="col-md-8">
                    @Html.DropDownList("idCadenaHotelera", null, htmlAttributes: new { @style = "width: 100%; height:30px;" })
                </div>
            </div>

            <!--Categoria-->
            <div class="col-md-2">
                <div class="col-md-4">
                    <label style="font-size:11px;">Categoria</label>
                </div>
                <div class="col-md-8">
                    @Html.DropDownList("idCategoria", null, htmlAttributes: new { @style = "width:100%; height:30px;" })
                </div>
            </div>
        </div>
        <!--Segunda Fila-->
        <div class="col-md-12">
            <!--Zona-->
            <div class="col-md-2">
                <div class="col-md-5">
                    <label style="font-size:11px;">Zona</label>
                </div>
                <div class="col-md-7">
                    @Html.DropDownList("idZona", null, htmlAttributes: new { @style = "width:100%; height:30px;" })
                </div>
            </div>

            <!--Pais-->
            <div class="col-md-2">
                <div class="col-md-5">
                    <label style="font-size:11px;">Pais</label>
                </div>
                <div class="col-md-7">
                    @Html.DropDownList("idPais", null, htmlAttributes: new { @style = "width:100%; height:30px;" })
                </div>
            </div>

            <!--Ciudad-->
            <div class="col-md-2">
                <div class="col-md-5">
                    <label style="font-size:11px;">Ciudad</label>
                </div>
                <div class="col-md-7">
                    @Html.DropDownList("idCiudad", null, htmlAttributes: new { @style = "width:100%; height:30px;" })
                </div>
            </div>

            <!--Telefono 1-->
            <div class="col-md-2" style="width:18.5%">
                <div class="col-md-5">
                    <label style="font-size:11px;">Telefono 1</label>
                </div>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.telefono1hotel, new { htmlAttributes = new { @style = "width:100%; height:30px;" } })
                </div>
            </div>

            <!--Telefono 2-->
            <div class="col-md-2" style="width:18.5%">
                <div class="col-md-5">
                    <label style="font-size:11px;">Telefono 2</label>
                </div>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.telefono2hotel, new { htmlAttributes = new { @style = "width:100%; height:30px;" } })
                </div>
            </div>
        </div>
        <!--Tercera Fila-->
        <div class="col-md-12" style="margin-top:5px;">
            <div class="col-md-6">
                <!--Direccion-->
                <div class="col-md-2" style="width:16%;">
                    <label>Direccion</label>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.direccionhotel, new { htmlAttributes = new { @style = "width:100%; height:30px;" } })
                </div>
            </div>
            <div class="col-md-6">
                <!--Correo-->
                <div class="col-md-2" style="width:16%;">
                    <label>Correo</label>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.correohotel, new { htmlAttributes = new { @style = "width:100%; height:30px;" } })
                </div>
            </div>
        </div>
        <!--Cuarta Fila-->
        <div class="col-md-12" style="margin-top:5px;">
            <!--Link-->
            <div class="col-md-2">
                <div class="col-md-5">
                    <label style="font-size:11px;">Link</label>
                </div>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.linkhotel, new { htmlAttributes = new { @style = "width:100%; height:30px;" } })
                </div>
            </div>

            <!--Check In-->
            <div class="col-md-2">
                <div class="col-md-5">
                    <label style="font-size:11px;">Check In</label>
                </div>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.checkinhotel, new { htmlAttributes = new { @style = "width:100%; height:30px;" } })
                </div>
            </div>

            <!--Check Out-->
            <div class="col-md-2">
                <div class="col-md-5">
                    <label style="font-size:11px;">Check Out</label>
                </div>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.checkouthotel, new { htmlAttributes = new { @style = "width:100%; height:30px;" } })
                </div>
            </div>

            <!--Mapa-->
            <div class="col-md-2" style="width:18.5%">
                <div class="col-md-5">
                    <label style="font-size:11px;">Mapa</label>
                </div>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.mapahotel, new { htmlAttributes = new { @style = "width:100%; height:30px;" } })
                </div>
            </div>

            <!--Logo-->
            <div class="col-md-2" style="width:18.5%">
                <div class="col-md-5">
                    <label style="font-size:11px;">Logo</label>
                </div>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.logohotel, new { htmlAttributes = new { @style = "width:100%; height:30px;" } })
                </div>
            </div>
        </div>
        <!--Quinta Fila - Maestro Detalle-->
        <div class="col-md-12" style="margin-top:5px;">
            <div class="details">
                <div class="table-responsive">
                    <table id="example" class="table table-bordered table-striped" border="1">
                        <tr style="text-align:center;">
                            <td>Nombre</td>
                            <td>Correo</td>
                            <td>Puesto</td>
                            <td>Acciones</td>
                        </tr>
                        <tr class="mycontainer" id="mainrow">
                            <td class="col-md-3">
                                <input type="text" id="nombreContactoHotel" name="nombreContactoHotel" class="nombreContactoHotel form-control" />
                            </td>
                            <td class="col-md-3">
                                <input type="text" id="correoContactoHotel" name="correoContactoHotel" class="correoContactoHotel form-control" />
                            </td>
                            <td class="col-md-3">
                                @Html.DropDownList("idCategoria1", null, htmlAttributes: new { @class = "idCategoria1 form-control" })
                            </td>
                            <td class="col-md-3" style="text-align:center;">
                                <input type="button" id="add" value="Agregar" style="width: 80px" class="btn btn-primary" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div id="orderItems">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="orderdetailsItems"></table>
                </div>
                <span id="orderItemError" style="color: red"></span>
            </div>
        </div>
        <!--Botones-->
        <div class="col-md-12" style="text-align:center;">
            <input id="submit" type="button" value="Guardar" class="btn btn-success" />
            @Html.ActionLink("Regresar Lista Hotel", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
