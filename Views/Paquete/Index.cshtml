@model IEnumerable<IntranetMundoRepresentaciones.Models.tb_paquete>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title" style="color:#d1158e;"><strong style="color:#d1158e;">@Html.ActionLink("Agregar Paquete", "Create")</strong></h4>
            </div>
            <div class="panel-body">
                <div class="col-xs-12 col-md-12 col-lg-12 col-sm-12">
                    @using (Html.BeginForm())
                    {
                        <div class="col-md-12" style="text-align:center;">
                            <!--Primera Fila-->
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <div class="col-md-3">
                                        <label>
                                            Fecha Salida
                                        </label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="date" name="fecha1" class="form-control" required/>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="col-md-3">
                                        <label>
                                            Fecha Llegada
                                        </label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="date" name="fecha2" class="form-control" required/>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="col-md-3">
                                        <label>
                                            Linea Aerea
                                        </label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownList("idLineaaerea", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <!--Segunda Fila-->
                            <div class="col-md-12">
                                <br />
                                <div class="col-md-4">
                                    <div class="col-md-3">
                                        <label>
                                            Zona
                                        </label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownList("idZona", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="col-md-3">
                                        <label>
                                            Pais
                                        </label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownList("idPais", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="col-md-3">
                                        <label>
                                            Ciudad
                                        </label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownList("idCiudad", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <!--Tercera Fila-->
                            <div class="col-md-12">
                                <br />
                                <div class="col-md-4">
                                    <div class="col-md-3">
                                        <label>
                                            Cadena
                                        </label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownList("idCadena", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="col-md-3">
                                        <label>
                                            Hotel
                                        </label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownList("idHotel", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="col-md-3">
                                        <label>

                                        </label>
                                    </div>
                                    <div class="col-md-9">

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="text-align: center;">
                                <br />
                                <input type="submit" value="Consulta" class="btn btn-primary" style="height:33px; width:10%;" />
                            </div>
                        </div>
                    }
                </div>

                <div class="col-xs-12 col-md-12 col-lg-12 col-sm-12">
                    <br />
                    @if (Model.Count() > 0)
                    {
                        <table id="data-table" class="table table-striped table-bordered">
                            <tr>
                                <td>Destino</td>
                                <td>Cadena Hotelera</td>
                                <td>Hotel</td>
                                <td>Tipo Habitacion</td>
                                <td>Linea Aerea</td>
                                <td>Precio Triple</td>
                                <td>Detalle</td>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.tb_ciudad.nombreCiudad</td>
                                    <td>@item.tb_cadenahotelera.nombreCadenaHotelera</td>
                                    <td>@item.tb_hotel.nombrehotel</td>
                                    <td>@item.tb_tipohabitacion.NombreTipoHabitacion</td>
                                    <td>@item.tb_aerolinea.NombreComercial</td>
                                    <td>@item.triplereal</td>
                                    <td>@(Html.ActionLink("Detalles", "Details", new { id = item.idPaquete }, new { @class = "btn btn-info" }))</td>
                                </tr>
                            }

                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>
