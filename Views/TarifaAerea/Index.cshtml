@model IEnumerable<IntranetMundoRepresentaciones.Models.tb_tarifa_aerea>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title" style="color:#d1158e;"><strong style="color:#d1158e;">@Html.ActionLink("Agregar Tarifa Aerea", "Create")</strong></h4>
            </div>
            <div class="panel-body">
                <table id="data-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>DESTINO</th>
                            <th>LINEA AEREA</th>
                            <th>TARIFA</th>
                            <th>CLASE</th>
                            <th>MONTO TARIFA</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody style="text-transform:uppercase">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => item.id_tarifa_aerea)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.tb_ciudad.nombreCiudad)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.tb_aerolinea.NombreComercial)
                                </td>
                                <td style="text-transform: uppercase">
                                    @Html.DisplayFor(model => item.tipo_tarifa)
                                </td>
                                <td style="text-transform: uppercase">
                                    @Html.DisplayFor(model => item.clase)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.total_tarifa)
                                </td>
                                <td>
                                    <div class="divbtnopc">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default dropdown-toggle btnopc"
                                                    data-toggle="dropdown">
                                                <span> ACTION</span>
                                            </button>

                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="/TarifaAerea/Edit/@item.id_tarifa_aerea">EDITAR</a></li>
                                                <li><a href="/TarifaAerea/Details/@item.id_tarifa_aerea">DETALLE</a></li>
                                                <li><a href="/TarifaAerea/Generatepdf/@item.id_tarifa_aerea">DESCARGAR</a></li>
                                                <li><a onclick="dardebaja(@item.id_tarifa_aerea)">ELIMINAR</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    // Permite eliminar archivo previamente adjunto
    function dardebaja(id) {
        var data = { id: id }
        $.ajax({
            type: "POST",
            url: "/TarifaAerea/DardeBaja",
            data: JSON.stringify(data),
            contentType: "application/json",
            success: function (data) {
                if (data.status) {
                    sweetAlert({
                        title: 'Correcto',
                        text: 'El registro fue eliminado',
                        type: 'success'
                    }).then(function () {
                        window.location.reload();
                    });
                }
                else {
                    sweetAlert({
                        title: 'Error',
                        text: 'No se pudo eliminar registro',
                        type: 'error'
                    }).then(function () {
                        window.location.reload();
                    });

                }
            },
            error: function (ex) {
                console.log(ex)
            }
        })
    }
</script>
