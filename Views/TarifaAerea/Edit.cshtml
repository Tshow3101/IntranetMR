                            <div class="col-md-12">
                                <div class="col-md-6 col-lg-6">
                                    <label>STOP OVERS:</label>
                                </div>
                                <div class="col-md-6 col-lg-6">
                                    <button type="button" class="btn btn-warning" style="float:right" id="addso"><i class="fa fa-plus-circle"></i></button>
                                </div>
                            </div>
                        </legend>
                        <!--FORMULARIO-->
                        <div class="well">
                            <div class="row">
                                <div class="col-md-5 col-lg-5 titleform textoCentrado labelpad">
                                    <div class="form-group">
                                        <label>PAIS</label>
                                    </div>
                                </div>
                                <div class="col-md-5 col-lg-5 titleform textoCentrado labelpad">
                                    <div class="form-group">
                                        <label>CIUDAD</label>
                                    </div>
                                </div>
                                <div class="col-md-2 col-lg-2 titleform textoCentrado labelpad">
                                    <div class="form-group">
                                        <label>+/-</label>
                                    </div>
                                </div>
                            </div>

                            <table class="md3" id="md3">
                                <tbody>

                                    @foreach (var item in Model.tb_detalletarifastopovers)
                                    {
                                        <tr>
                                            <td class="col-md-4 col-lg-4">
                                                <select class="form-control idpaisso" id="idpaisso">
                                                    <option value="@item.tb_pais.idPais">@item.tb_pais.NombrePais</option>
                                                </select>
                                            </td>
                                            <td class="col-md-4 col-lg-4">
                                                <select class="form-control iddestinoso" id="iddestinoso">
                                                    <option value="@item.tb_ciudad.idCiudad">@item.tb_ciudad.nombreCiudad</option>
                                                </select>
                                            </td>
                                            <td class="col-md-2 col-lg-2">
                                                <button type="button" class="btn btn-danger" style="float:right" id="remso"><i class="fa fa-minus-circle"></i></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </fieldset>

                    <br />


                </div>

                <div class="col-md-12 col-lg-12" style="text-align:center">
                    <input value="Guardar" id="submit" type="button" class="btn btn-success" />
                    <br />
                    <br />
                    <br />
                </div>

            }
        </div>
    </div>
</div>
