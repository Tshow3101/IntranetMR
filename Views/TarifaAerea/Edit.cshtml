                    type: 'POST',
                    //Llamado al metodo en el controlador
                    url: '@Url.Action("getDestinos", "TarifaAerea")',
                dataType: 'json',
                success: function (States) {
                    if (States.length == 0) {
                    }
                    else {
                        //Se agrega el elemento vacio para poder desplegar que seleccione una opcion
