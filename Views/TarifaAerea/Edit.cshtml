                prec_chd: $('#preniño').val(),
                prec_inf: $('#preinf').val(),
                estado: 1,
            }
            console.log(data);
            console.log(detalle);

            var id = $('#id_tarifa_aerea').val();

            $.ajax({

                type: 'POST',
                url: '/TarifaAerea/EditarTarifa',
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: function (data) {
                    if (data.status) {
                        $.ajax({

                            type: 'POST',
                            url: '/TarifaAerea/eliminaDetalles',
                            data: JSON.stringify(detalle),
                            contentType: 'application/json',
                            success: function (data) {
                                if (data.status) {
                                    sweetAlert({
                                        title: 'Correcto',
                                        text: 'Tarifa ha sido editado correctamente.',
                                        type: 'success'
                                    }).then(function () {
                                        window.location.reload();

