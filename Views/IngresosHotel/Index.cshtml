@model IEnumerable<IntranetMundoRepresentaciones.Models.tb_ingresohotel>

@{
    ViewBag.Title = "Index";
}
<br />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title" style="color:#d1158e;"><strong style="color:#d1158e;">@Html.ActionLink("Agregar Ingreso Hotel", "Create")</strong></h4>
            </div>
            <div class="panel-body">
                <table id="data-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <td>Temporada Viaje</td>
                            <td>Temporada Compra</td>
                            <td>Tarifa</td>
                            <td>Codigo Promocion</td>
                            <td>Descuento</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="text-align:center;">
                                <td>
                                    @String.Format("{0:dd/MM/yyyy}", item.fecviajeini)
                                    <label> A </label>
                                    @String.Format("{0:dd/MM/yyyy}", item.fecviajefin)
                                </td>
                                <td>
                                    @String.Format("{0:dd/MM/yyyy}", item.feccompraini)
                                    <label> A </label>
                                    @String.Format("{0:dd/MM/yyyy}", item.feccomprafin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tb_categoria.nombreCategoria)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.codprom)
                                </td>
                                <td>
                                    @if (item.porcentaje > 0)
                                    {
                                        <label>
                                            P:
                                        </label>
                                        @Html.DisplayFor(modelItem => item.porcentaje)
                                        <label>
                                            %
                                        </label>
                                    }
                                    @if (item.porcentaje <= 0)
                                    {
                                        <label>
                                            A: $
                                        </label>
                                        @Html.DisplayFor(modelItem => item.montoadulto)
                                        <label>
                                            N: $
                                        </label>
                                        @Html.DisplayFor(modelItem => item.montoniño)
                                        <label>
                                            I: $
                                        </label>
                                        @Html.DisplayFor(modelItem => item.montoinfante)
                                    }
                                </td>
                                <td>
                                    @(Html.ActionLink("Editar", "Edit", new { id = item.idIngresoHotel }, new { @class = "btn btn-warning" }))
                                    @(Html.ActionLink("Detalles", "Details", new { id = item.idIngresoHotel }, new { @class = "btn btn-info" }))
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>