@model IEnumerable<IntranetMundoRepresentaciones.Models.tb_usuario>

@{
    ViewBag.Title = "Index";
}
<br />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title" style="color:#d1158e;"><strong style="color:#d1158e;">@Html.ActionLink("Agregar Empleado", "Create")</strong></h4>
            </div>
            <div class="panel-body">
                <table id="data-table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <td>Nombre</td>
                            <td>Apellidos</td>
                            <td>Telefono</td>
                            <td>Correo</td>
                            <td>Anexo</td>
                            <td>Area</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreusuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.apellidopaternousuario)
                                    @Html.DisplayFor(modelItem => item.apellidomaternousuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.telefonousuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.correousuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.anexo_usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tb_categoria.nombreCategoria)
                                </td>
                                <td>
                                    @(Html.ActionLink("Editar", "Edit", new { id = item.idUsuario }, new { @class = "btn btn-warning" }))
                                    @(Html.ActionLink("Detalles", "Details", new { id = item.idUsuario }, new { @class = "btn btn-info" }))
                                    @(Html.ActionLink("Eliminar", "Delete", new { id = item.idUsuario }, new { @class = "btn btn-danger" }))
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>